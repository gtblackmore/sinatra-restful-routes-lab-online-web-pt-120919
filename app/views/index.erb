<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Check Out These Tasty Recipes!</title>
  </head>
  <body>
    <% @recipes.each do |recipe| %>
    <a href="/recipes/<%= @recipes.id %>">
    <h2><%= @recipes.name %></h2>
    </a>
    <h3>Ingredients:</h3> <%= @recipes.ingredients %>
    <h3>Cook Time:</h3> <%= @recipes.cook_time %>
    <% end %>
  </body>
</html>